OPTIONS=name:Gavin
OPTIONS=hilite_pet
OPTIONS=pettype:cat, catname:Clanthony
OPTIONS=showexp, time, color
OPTIONS=!bones

# Only pickup money
OPTIONS=autopickup
OPTIONS=pickup_type:$
